<%- include('../partials/header') %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h3"><%= title %></h1>
  <a href="/customers/add" class="btn btn-primary">
    + Thêm khách hàng mới
  </a>
</div>

<div class="card shadow-sm mb-4">
  <div class="card-body">
    <form action="/customers" method="GET">
      <div class="input-group">
        <input 
          type="text" 
          class="form-control form-control-lg" 
          placeholder="Nhập Số điện thoại khách hàng..." 
          name="q"
          value="<%= searchTerm %>"
        >
        <button class="btn btn-primary" type="submit">Tìm kiếm</button>
      </div>
    </form>
  </div>
</div>

<div class="card shadow-sm">
  <div class="card-body">
    <table class="table table-hover align-middle">
      <thead class="table-light">
        <tr>
          <th scope="col">Họ tên</th>
          <th scope="col">Số điện thoại</th>
          <th scope="col">Điểm tích lũy</th>
          <th scope="col">Hạng</th>
          <th scope="col" class="text-end">Hành động</th>
        </tr>
      </thead>
      <tbody>
        <% if (customers.length === 0) { %>
          <tr>
            <td colspan="5" class="text-center text-muted">
              <% if (searchTerm) { %>
                Không tìm thấy khách hàng nào khớp với SĐT "<%= searchTerm %>".
              <% } else { %>
                Chưa có khách hàng nào. Hãy thêm mới hoặc tìm kiếm.
              <% } %>
            </td>
          </tr>
        <% } %>

        <% customers.forEach(customer => { %>
          <tr>
            <td><strong><%= customer.hoTen %></strong></td>
            <td><%= customer.soDienThoai %></td>
            <td><%= customer.diemTichLuy %></td>
            <td><span class="badge bg-info"><%= customer.hangThanhVien %></span></td>
            <td class="text-end">
              <a href="/customers/edit/<%= customer.id %>" class="btn btn-outline-primary btn-sm">
                Sửa
              </a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>

<%- include('../partials/footer') %>