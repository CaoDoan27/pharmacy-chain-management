<%- include('../partials/header') %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h3"><%= title %></h1>
  <a href="/users/add" class="btn btn-primary">
    + Tạo Người dùng mới
  </a>
</div>

<div class="card shadow-sm">
  <div class="card-body">
    <table class="table table-hover align-middle">
      <thead class="table-light">
        <tr>
          <th scope="col">Họ tên</th>
          <th scope="col">Tên đăng nhập</th>
          <th scope="col">Vai trò</th>
          <th scope="col">Chi nhánh</th>
          <th scope="col">Trạng thái</th>
          <th scope="col" class="text-end">Hành động</th>
        </tr>
      </thead>
      <tbody>
        <% if (users.length === 0) { %>
          <tr>
            <td colspan="6" class="text-center">Chưa có người dùng nào (ngoài Quản lý tổng).</td>
          </tr>
        <% } %>

        <% users.forEach(user => { %>
          <tr>
            <td><strong><%= user.hoTen %></strong></td>
            <td><%= user.tenDangNhap %></td>
            <td><%= user.vaiTro %></td>
            <td><%= user.Branch ? user.Branch.tenChiNhanh : 'N/A' %></td>
            <td>
              <% if (user.trangThai === 'Đang hoạt động') { %>
                <span class="badge bg-success">Đang hoạt động</span>
              <% } else { %>
                <span class="badge bg-secondary">Đã khóa</span>
              <% } %>
            </td>
            <td class="text-end">
              <form action="/users/reset-password/<%= user.id %>" method="POST" class="d-inline" onsubmit="return confirm('Bạn có chắc muốn đặt lại mật khẩu của người dùng này về \'123456\'?')">
                <button type="submit" class="btn btn-outline-secondary btn-sm">Reset MK</button>
              </form>

              <form action="/users/status/<%= user.id %>" method="POST" class="d-inline">
                <button type="submit" class="btn btn-warning btn-sm">
                  <%= (user.trangThai === 'Đang hoạt động') ? 'Khóa' : 'Mở khóa' %>
                </button>
              </form>
              
              <a href="/users/edit/<%= user.id %>" class="btn btn-outline-primary btn-sm">
                Sửa
              </a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>

<%- include('../partials/footer') %>