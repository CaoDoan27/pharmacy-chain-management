<%- include('../partials/header') %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h3"><%= title %></h1>
  <a href="/goods-receipt/add" class="btn btn-primary">
    + Tạo Phiếu Nhập Kho
  </a>
</div>

<div class="card shadow-sm">
  <div class="card-body">
    <table class="table table-hover align-middle">
      <thead class="table-light">
        <tr>
          <th scope="col">Mã Phiếu</th>
          <th scope="col">Ngày nhập</th>
          <th scope="col">Nhà cung cấp</th>
          <th scope="col">Người tạo</th>
          <th scope="col" class="text-end">Hành động</th>
        </tr>
      </thead>
      <tbody>
        <% if (receipts.length === 0) { %>
          <tr>
            <td colspan="5" class="text-center">Chưa có phiếu nhập kho nào.</td>
          </tr>
        <% } %>

        <% receipts.forEach(receipt => { %>
          <tr>
            <td><strong>#<%= receipt.id %></strong></td>
            <td>
              <%= new Date(receipt.ngayNhap).toLocaleString('vi-VN') %>
            </td>
            <td><%= receipt.Supplier.tenNhaCungCap %></td>
            <td><%= receipt.User.hoTen %></td>
            <td class="text-end">
              <a href="/goods-receipt/<%= receipt.id %>" class="btn btn-outline-primary btn-sm">
                Xem Chi tiết
              </a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>

<%- include('../partials/footer') %>